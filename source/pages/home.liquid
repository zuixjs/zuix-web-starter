---

{%- for section in collections.sections -%}
<div layout="column center-center" style="margin-bottom: 56px">
    <h2 class="mdl-color-text--primary">{{ section.data.title }}</h2>
    <div layout="rows center-center">
    {%- for post in collections[section.data.group] -%}

        {% assign imageUrl = 'https://picsum.photos/seed/' | append: post.data.tags | append: '-' | append: forloop.index0 | append: '/256/256' %}
        {% assign postUrl = post.url | url %}

        {% zx 'card' post.data.title imageUrl 'Open' postUrl 'image' %}
        {{ post.data.description }}
        {% endzx %}

    {%- endfor -%}
    </div>
</div>
{% endfor %}
