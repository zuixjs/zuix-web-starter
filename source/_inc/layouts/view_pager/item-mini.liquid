<div class="card-wrapper mini watchable" self="{{ selfLayout }}" layout="column stretch-center">
    <div class="card" layout="column top-center">

        <div class="cover-wrapper" style="background-image: url({{ post.data.imagePreview }})"></div>

        <div class="summary">
            <h1 class="title">{{ post.data.title }}</h1>
        </div>
        <div class="options" layout="row center-center" self="bottom">
            <span>{{ post.data.pubDate }}</span>
            <button self="right">
                <i class="material-icons">more_vert</i>
            </button>
        </div>

    </div>
</div>
