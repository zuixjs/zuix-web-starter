:root {
    --lite-color: #fff;
    --lite-color-text: #000;
    --lite-nav-color: #3c4487;
    --lite-nav-color-text: #fff;
    --lite-color--accent: #e10c57;
    --lite-color--primary: #236fbc;
    --lite-color--code: #005000;
    --lite-font--weigth: 400;

    --dark-color: #1d1d1d;
    --dark-color-text: #d2d2d2;
    --dark-nav-color: #543369; /* #4b2d4b; */ /* #014b76; */ /* #60142d; */
    --dark-nav-color-text: #ccc;
    --dark-color--accent: #d5c262;
    --dark-color--primary: #88c963;
    --dark-color--code: #a0bf85;
    --dark-font--weigth: 400;
}

{%- assign themes = 'lite dark' | split: ' ' %}
{% for theme in themes -%}
{% if forloop.first == false -%}
{% assign tc = '.theme-' | concat: theme |  concat: ' ' -%}
{% endif %}
/*========================*\
      Theme '{{ theme }}'
\*========================*/

body{{ tc -}} {
    background-color: var(--{{ theme }}-color);
    color: var(--{{ theme }}-color-text);
    font-weight: var(--{{ theme }}-font--weigth);
}
{{ tc -}}
nav, {{ tc -}} footer, {{ tc -}} header {
    background-color: var(--{{ theme }}-nav-color);
    color: var(--{{ theme }}-nav-color-text);
    fill: var(--{{ theme }}-nav-color-text);
    box-shadow: 0 4px 6px 0 rgb(0 0 0 / 20%), 0 -4px 12px 0 rgb(0 0 0 / 20%);
}
{{ tc -}}
nav svg, {{ tc -}} .menu-button svg {
    fill:var(--{{ theme }}-nav-color-text);
}
{{ tc -}}
svg {
    fill:var(--{{ theme }}-color-text);
}
{{ tc -}}
nav a, {{ tc -}} footer a {
    color: var(--{{ theme }}-nav-color-text);
}
{{ tc -}}
a {
    color: var(--{{ theme }}-color--accent);
    text-decoration: none;
}
{{ tc -}} main h1, {{ tc -}} main h2, {{ tc -}} main h3 {
    color: var(--{{ theme }}-color--primary);
}
{{ tc -}} code:not([class*=language-]), {{ tc -}} pre:not([class*=language-]) {
    color: var(--{{ theme }}-color--code);
}
{{ tc -}}
.accent {
    color: var(--{{ theme }}-color--accent);
    fill: var(--{{ theme }}-color--accent);
}
{{ tc -}}
.primary {
    color: var(--{{ theme }}-color--primary);
    fill: var(--{{ theme }}-color--primary);
}
{{ tc -}}
.background {
    background-color: var(--{{ theme }}-color);
}
{{ tc -}}
.input-container input, {{ tc }} input {
  color: var(--{{ theme }}-color-text);
  border-bottom-color: var(--{{ theme }}-color--primary);
}
{{ tc -}}
.input-container input:valid, {{ tc }} input:valid {
  border-bottom-color: var(--{{ theme }}-color--primary)!important;
}
{{ tc }}
[type=radio]:checked::before,
{{ tc }}
[type=checkbox]:checked::before {
    background-color: var(--{{ theme }}-color--accent);
}
{{ tc }}
[type=radio],
{{ tc }}
[type=checkbox] {
    border-color: var(--{{ theme }}-color--primary);
}
{{ tc }}
button {
    color: var(--{{ theme }}-color-text);
    fill: var(--{{ theme }}-color-text);
}
{% endfor %}
