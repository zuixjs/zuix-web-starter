{% unless options contains 'no-footer' %}
<footer #footer layout="columns bottom-center" style="min-height: 200px;">

    <div self="size-large" layout="row sm-column top-stretch">
        <section layout="column top-left" style="padding:32px">
            <div><strong>Content</strong></div>
            <ul>
                {% assign docs = collections['docs'] | sort: 'data.order' %}
                {% for item in docs %}
                    <li><a href="{{ item.url | url }}">{{ item.data.title }}</a></li>
                {% endfor %}
            </ul>
        </section>
        <div self="size-x1"></div>
        <section layout="column top-left" style="padding:32px">
            <div><strong>Links</strong></div>
            <ul>
                {% for item in links %}
                    <li><a href="{{ item.link | url }}">{{ item.title }}</a></li>
                {% endfor %}
            </ul>
        </section>
    </div>

    <div self="size-large" layout="row sm-column center-spread" style="padding: 12px;">

        <a self="left" href="https://pagespeed.web.dev/report?url={{ app.siteMapUrl }}{{ page.url }}">
            <div layout="row center-left" style="gap: 8px;">
                <img width="24" height="24" alt="PageSpeed Insight logo" src="{{ '/images/page-speed-insight-icon.png' | url }}">
                <span>PageSpeed Insight</span>
            </div>
        </a>

        <div self="right">
            powered by <a href="https://zuixjs.github.io/zkit"><strong>zKit</strong></a> and <a href="https://zuixjs.org"><strong>zuixâš¡js</strong></a>
        </div>

    </div>

</footer>
{% endunless %}
